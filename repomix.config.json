{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "input": {
    "maxFileSize": 52428800
  },
  "output": {
    "filePath": "repomix-output.md",
    "style": "markdown",
    "parsableStyle": false,
    "fileSummary": true,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "compress": false,
    "topFilesLength": 5,
    "showLineNumbers": false,
    "copyToClipboard": false,
    "git": {
      "sortByChanges": true,
      "sortByChangesMaxCommits": 100,
      "includeDiffs": false
    }
  },
  "include": [
    "src/features/questions/**/*.ts",
    "src/features/questions/**/*.tsx",
    "src/app/(dashboard)/faculty/questions/**/*.tsx",
    "src/app/(dashboard)/faculty/questions/**/*.ts"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "src/features/!(questions)/**",
      "src/app/(dashboard)/faculty/!(questions)/**",
      "src/app/(dashboard)/student/**",
      "src/app/(dashboard)/admin/**",
      "src/app/(dashboard)/exam-coordinator/**",
      "src/components/**",
      "src/lib/**",
      "src/hooks/**",
      "src/contexts/**",
      "src/styles/**",
      "public/**",
      "*.test.ts",
      "*.test.tsx",
      "*.spec.ts",
      "*.spec.tsx"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}